<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:text="ID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_view_id_std"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="18sp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toStartOf="@+id/edit_text_id_std" />

    <TextView
        android:text="First Name : "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_view_first_name"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="@+id/edit_text_first_name"
        android:textSize="18sp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toStartOf="@+id/edit_text_first_name" />
    <TextView
        android:text="Last Name : "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_view_last_name"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="@+id/edit_text_last_name"
        android:textSize="18sp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toStartOf="@+id/edit_text_last_name" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:id="@+id/edit_text_id_std"
        android:ems="10"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:id="@+id/edit_text_first_name"
        android:ems="10"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toBottomOf="@+id/edit_text_id_std"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:id="@+id/edit_text_last_name"
        android:ems="10"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toBottomOf="@+id/edit_text_first_name"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:text="send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_send" android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/edit_text_last_name"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="8dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="8dp"/>

</android.support.constraint.ConstraintLayout>